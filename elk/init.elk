fn elkPrompt() {
    let pwdOptions = {
        "wholeFolderNameAmount": 2,
    }
    let branch = git branch
        |all where => &str::startsWith("* ")
        | map => x: x[2..]
        | iter::firstOrNil
        || nil

    let sections = [
        env::prettyPwd(pwdOptions) | ansi::color("blue"),
        "  ${branch}" | ansi::color("magenta") if branch,
        ansi::color(" (venv)", "green") if $VIRTUAL_ENV,
        " ❯ ",
    ]

    sections
        | map => x { x ?? "" }
        | join
}

